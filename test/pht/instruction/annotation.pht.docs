    (instr
        (long  "@to-ext-func")
        (short "@to-efn")
        (desc  """
            Аннотация @b{extension-function}.
            Применяется к выражениям типа:
            1. @b{метод}
            """)
        (usage
            "(@to-ext-func expr0 exprN)"
            [["expr*"] "выражения."])
        (usage
            "(@to-efn expr0 exprN)"
            [["expr*"] "выражения."])
        (example
            """
            (use-ctx pht
                (app
                    (@to-efn
                    (defn foo ^void [[text ^String]]
