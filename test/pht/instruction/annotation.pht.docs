(category "annotation"
    (instr
        (long "@abstract")
        (desc """
            Аннотация @b{abstract}.
            Применяется к выражениям типа:
            1. @b{класс}
            2. @b{метод}
            """)
        (usage
            "(@abstract expr0 exprN)"
            [["expr*"] "выражения."])
        (example
            """
            (use-ctx pht
                (@abstract
                (cls Foo [^Object]
                    (ctor [] (ccall))
                    (defn foo ^void []
                        (println "Foo!"))))
                (obj FooImpl [^Foo]
                    (ctor [] (ccall)))
                (app-fn
                    (#foo ^FooImpl)))
            """
            "Код работает на всех платформах!")
        (example
            """
            (use-ctx pht
                (itf IFoo [] (@abstract
                    (defn foo ^void [])))
                (obj FooImpl [^Object ^IFoo]
                    (ctor [] (ccall))
                    (defn foo ^void []
                        (println "Foo!")))
                (app-fn
                    (#foo ^FooImpl)))
            """
            "Код работает на всех платформах!"))
    (instr
        (long "@final")
        (desc """
            Аннотация @b{final}.
            Применяется к выражениям типа:
            1. @b{поле}
            """)
        (usage
            "(@final expr0 exprN)"
            [["expr*"] "выражения."])
        (example
            """
            (use-ctx pht
                (app
                    (@final
                    (fld [[i ^int]]))
                    (defn <clinit> ^void []
                        (set ^App/i 333))
                    (app-fn
                        (println ^App/i))))
            """
            "Код работает на всех платформах!"))
    (instr
