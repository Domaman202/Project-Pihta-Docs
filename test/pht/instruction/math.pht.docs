(category "math"
    (instr
        (long   "add")
        (symbol "+")
        (desc   "Сложение @i{нескольких} значений.")
        (usage
            "(add arg0 argN)"
            [["arg0" "argN"] "значения."])
        (usage
            "(+ arg0 argN)"
            [["arg0" "argN"] "значения."])
        (example
            """
            (use-ctx pht
                (app-fn
                    (println (+ 6 3 3))))
            """
            "Код работает на всех платформах!"))

