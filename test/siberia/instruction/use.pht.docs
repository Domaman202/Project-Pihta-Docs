(category "use"
    (instr
        (long "use")
        (desc """
            Инструкция использования модулей в глобальном контексте.
            @br(/siberia/use/instructions/use-ctx.html){Не рекомендуется к использованию!}
            """)
        (usage
            "(use name0 nameN)"
            [["name*"] "модули."])
        (example
            """
            (progn
                (use pht)
                (app-fn
                    (println "Внимание! Обнаружен опасный код!")))
            """
            "Код работает на всех платформах!"))
    (instr
        (long "use-ctx")
        (desc "Инструкция использования модулей в локальном контексте блока.")
        (usage
            "(use-ctx name0 nameN expr0 exprN)"
            [["name*"] "модули."]
            [["expr*"] "выражения блока."])
        (example
            """
            (use-ctx pht
                (app-fn
                    (println "Внимание! Обнаружен безопасный код!")))
            """
            "Код работает на всех платформах!")
        (test
            "test/siberia/cpp/use-ctx"
            "test/siberia/jvm/use-ctx")))