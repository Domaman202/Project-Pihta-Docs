(category "logic & bits"
    (instr
        (long   "and")
        (symbol "&")
        (desc   "[Логическая | Битовая] операция 'И' для двух значений.")
        (usage
            "(and argA argB)"
            [["argA" "argB"] "значения."])
        (usage
            "(& argA argB)"
            [["argA" "argB"] "значения."])
        (example
            """
            (use-ctx pht
                (app-fn
                    (println (and 3 2))))
            """
            "Код работает на всех платформах!")
        (example
            """
            (use-ctx pht
                (app-fn
                    (println (and true true))))
            """
            "Код работает на всех платформах!"))

